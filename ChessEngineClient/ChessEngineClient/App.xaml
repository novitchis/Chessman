<Application
    x:Class="ChessEngineClient.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ChessEngineClient" 
    RequestedTheme="Light">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/AppColors.xaml"/>
                <ResourceDictionary Source="Styles/ControlsStyles.xaml"/>
                <ResourceDictionary Source="Styles/CustomGraphics.xaml"/>
                <ResourceDictionary Source="ChessBoard/ChessPiecesGraphics.xaml"/>
                <ResourceDictionary Source="CommonConverters.xaml"/>
                <ResourceDictionary Source="AppShell/ShellStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        <local:ViewModelLocator x:Key="ViewModelLocator" />
        </ResourceDictionary>

    </Application.Resources>
</Application>
